/*
INPUT
enter no of rows
4
OUTPUT
*
**
***
****
*/

import java.util.Scanner;

public class half_pyramid {
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        System.out.println("enter no of rows");
        int n = sc.nextInt();
        int i,j;
        for(i=1;i<=n;i++){
            for(j=1;j<=i;j++){
                    System.out.print("*");
            }
        System.out.println("");       

        }
    }
}
